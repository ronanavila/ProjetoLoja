@{
    ViewData["Title"] = "Cadastro";
}

@model ProjetoLoja.Models.Customer;


<h3>Cadastro de Cliente</h3>

<form method="post" asp-action="Registration">
    <div class="panel panel-default">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="panel-body">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" asp-for="Name"></label>
                    <input type="text" class="form-control" id="name" placeholder="José Carlos Medeiros" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="CPF"></label>
                    <input type="text" class="form-control" id="cpf" placeholder="333.333.333-33" asp-for="CPF">
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="PhoneNumber"></label>
                    <input type="text" class="form-control" id="phoneNumber" placeholder="(99)9999-9999" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Credit"></label>
                    <input type="number" min="0" step="0.01" value="0.00" class="form-control" id="credit" placeholder="0,00" asp-for="Credit">
                    <span asp-validation-for="Credit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Finalizar Cadastro">
                </div>
            </div>          
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}