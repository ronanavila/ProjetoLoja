@{
    ViewData["Title"] = "Oferta";
}

@model OfferRegistration;

<h3>Oferta</h3>


<form method="post" asp-action="Find">
    <div class="panel panel-default">
        <div class="form-group">
            <label class="control-label">Digite o Nome ou CPF para buscar</label>
            <input type="text" class="form-control" id="attribute" name="attribute" placeholder="Valor a buscar">
            <input type="submit" class="btn btn-success" value="Buscar">
        </div>
    </div>
</form>

<div>
    @{if (Model != null)
        {
            <select name="clientselection" class="selectpicker coloffset-1" required form="CutomerForm" asp-for="ListCustomer" asp-items="@(new SelectList(Model.ListCustomer, nameof(Customer.Name), nameof(Customer.Name)))">
                <option selected="selected" value="">Selecione</option>
            </select>
        }
    }
</div>

